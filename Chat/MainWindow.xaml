<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Chat" Height="490" Width="325">
    <Grid>
        <Label Content="Inserire il messaggio" Margin="10,0,149,32" Height="26" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtMessaggio" HorizontalAlignment="Left" Margin="10,0,0,14" Text="" TextWrapping="Wrap" Width="196" Height="18" VerticalAlignment="Bottom"/>
        <Button x:Name="btnInvias" Content="Invia" Margin="211,0,10,13" Height="20" VerticalAlignment="Bottom" Click="btnInvias_Click"/>
        <ListBox x:Name="lstMessaggi" Margin="0,0,0,112"/>
        <TextBox x:Name="txtIP" Margin="10,0,0,63" Text="" TextWrapping="Wrap" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="196"/>
        <Label Content="Inserire l'indirizzo IP" Margin="10,0,149,81" Height="26" VerticalAlignment="Bottom"/>
        <Label Content="Porta" Margin="211,0,49,81" Height="26" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtPorta" Margin="211,0,10,63" Text="" TextWrapping="Wrap" Height="18" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
